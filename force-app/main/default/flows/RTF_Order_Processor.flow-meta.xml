        <rules>
            <name>Order_is_New</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>for_IsNew</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Default_Fields</targetReference>
            </connector>
            <label>Order is New</label>
        </rules>
    </decisions>
