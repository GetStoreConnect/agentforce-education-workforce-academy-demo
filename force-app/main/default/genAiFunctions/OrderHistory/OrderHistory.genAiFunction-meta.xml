    <isIncludeInProgressIndicator>true</isIncludeInProgressIndicator>
    <mappingAttributes>
        <label>contactId</label>
        <name>input_contactId</name>
        <parameterName>contactId</parameterName>
        <parameterType>input</parameterType>
    </mappingAttributes>
    <mappingAttributes>
        <label>storeId</label>
        <name>input_storeId</name>
        <parameterName>storeId</parameterName>
        <parameterType>input</parameterType>
    </mappingAttributes>
    <masterLabel>AF - UAIS006 - Get Order History</masterLabel>
